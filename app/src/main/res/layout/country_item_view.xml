<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/countryimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/thien_mu_pagoda"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/countryname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_country_name"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="12dp"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:numStars="1"
            android:layout_toEndOf="@id/countryname"
            android:layout_alignBottom="@id/countryimg"
            android:layout_marginStart="70dp"
            android:layout_marginBottom="20dp"
            android:rating="1"
            android:backgroundTint="@color/color_white"
            android:progressTint="@color/color_blue_grey"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>